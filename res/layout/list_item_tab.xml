<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    		  android:orientation="horizontal"
    		  android:layout_width="fill_parent"
    		  android:layout_height="wrap_content"
    		  android:gravity="center_vertical|left"
    		  android:padding="4dp">
   
    <ImageView android:id="@+id/li_txt_tab_ssl"
        	   android:layout_width="wrap_content"
        	   android:layout_height="wrap_content"
        	   android:contentDescription="@string/img_ssl_cd"
        	   android:src="@drawable/img_ssl"/>
    
     
    <TextView android:id="@+id/li_txt_tab_url"
        	  android:layout_width="0dp"
        	  android:layout_height="wrap_content"
        	  android:layout_weight="1"
        	  style="@style/TextLink"
        	   />
  		  
    <ImageButton android:id="@+id/btn_tab_close"
        		 android:layout_width="wrap_content"
	        	 android:layout_height="wrap_content"
	        	 android:src="@drawable/img_content_remove"
	        	 android:contentDescription="@string/btn_tab_close_cd"
	        	 style="@style/Borderless"
	        	 />
      
</LinearLayout>
    