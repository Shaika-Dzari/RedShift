<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Theme.RedShift.Light" parent="@android:style/Theme.Holo.Light.NoActionBar">
        
    </style>
    
    <style name="Theme.RedShift" parent="@android:style/Theme.Holo.NoActionBar">
        
    </style>
    
    
    <style name="Theme.RedShift.MenuBar">
        <item name="android:background">@drawable/holo_menubar_dark</item>
        <item name="android:textColor">@android:color/primary_text_light</item>
    </style>
    
    <style name="Theme.RedShift.TabMenu">
        <item name="android:background">@drawable/holo_menubar_dark</item>
        <item name="android:textColor">@android:color/primary_text_light</item>
    </style>
    
    <style name="Theme.RedShift.Button">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@android:color/primary_text_dark</item>
        <item name="android:background">@drawable/redshift_button_dark</item>
        <item name="android:gravity">left|center_vertical</item>
    </style>
    
    <style name="txt_urllink">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@android:color/holo_blue_dark</item>
    </style>
    
    <style name="txt_title">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/primary_text_dark</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="txt_lightinfo">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@android:color/primary_text_dark</item>
    </style>
    
</resources>